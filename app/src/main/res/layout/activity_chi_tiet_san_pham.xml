<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChiTietSanPhamActivity">

    <include layout="@layout/custom_toolbar_chi_tiet_san_pham" />

    <ImageView
        android:id="@+id/imgCTSP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/groceries"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaCTSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã mặt hàng"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTenCTSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên mặt hàng"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSoLuongCTSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGiaNhapCTSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá nhập"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGiaBanCTSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá Bán"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDanhMucCTSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUpdateCTSP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/border_button2"
            android:text="Chỉnh sửa" />

        <Button
            android:id="@+id/btnXoaSanPhamCTSP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/border_button"
            android:text="Xóa Sản phẩm" />
    </LinearLayout>

</LinearLayout>